<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.PostCategoryFragment"
    android:background="@color/backgroundColor"
    >

    <!-- TODO: category fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리를\n선택해주세요"
            android:fontFamily="@font/notosans_regular"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#010101"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="70dp"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:layout_centerHorizontal="true"
            >

            <Button
                android:id="@+id/btn_category_fashion"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="패션"
                android:fontFamily="@font/notosans_regular"
                android:textSize="18sp"
                android:background="@drawable/custom_category_selector"
                />

            <Button
                android:id="@+id/btn_category_beauty"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="뷰티"
                android:textSize="18sp"
                android:fontFamily="@font/notosans_regular"
                android:background="@drawable/custom_category_selector"
                android:layout_toEndOf="@+id/btn_category_fashion"
                android:layout_marginStart="30dp"
                />

            <Button
                android:id="@+id/btn_category_food"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="푸드"
                android:textSize="18sp"
                android:fontFamily="@font/notosans_regular"
                android:background="@drawable/custom_category_selector"
                android:layout_below="@id/btn_category_fashion"
                android:layout_marginTop="30dp"
                />

            <Button
                android:id="@+id/btn_category_etc"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="기타"
                android:textSize="18sp"
                android:fontFamily="@font/notosans_regular"
                android:background="@drawable/custom_category_selector"
                android:layout_below="@id/btn_category_beauty"
                android:layout_toEndOf="@+id/btn_category_food"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                />
        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>