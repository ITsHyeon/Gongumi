<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.PostHashtagFragment"
    android:background="@color/backgroundColor"
    >

    <!-- TODO: category fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해시태그를\n입력해주세요\n(최대 5개)"
            android:fontFamily="@font/notosans_regular"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#010101"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="70dp"
            />

        <LinearLayout
            android:id="@+id/layout_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:paddingStart="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#"
                android:fontFamily="@font/notosans_regular"
                android:textSize="27sp"
                android:layout_marginStart="15dp"
                android:textColor="@color/textColor"
                />

            <EditText
                android:id="@+id/edit_hashtag"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:singleLine="true"
                />

            <Button
                android:id="@+id/btn_done"
                android:layout_width="70sp"
                android:layout_height="50dp"
                android:text="완료"
                android:fontFamily="@font/notosans_regular"
                android:textSize="16sp"
                android:layout_marginStart="15dp"
                android:background="@drawable/custom_button_yellow_hashtag"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_edit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:id="@+id/text_hashtag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_hashtag"
                android:text="asdf"
                android:fontFamily="@font/notosans_light"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_margin="5dp"
                android:elevation="10dp"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/text_hashtag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_hashtag"
                android:text="asdf"
                android:fontFamily="@font/notosans_light"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_margin="5dp"
                android:layout_toEndOf="@id/text_hashtag1"
                android:elevation="10dp"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/text_hashtag3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_hashtag"
                android:text="asdf"
                android:fontFamily="@font/notosans_light"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_margin="5dp"
                android:layout_toEndOf="@+id/text_hashtag2"
                android:elevation="10dp"
                android:visibility="invisible"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_hashtag2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                >

                <TextView
                    android:id="@+id/text_hashtag4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_hashtag"
                    android:text="asdf"
                    android:fontFamily="@font/notosans_light"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    android:visibility="invisible"
                    />

                <TextView
                    android:id="@+id/text_hashtag5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_hashtag"
                    android:text="asdf"
                    android:fontFamily="@font/notosans_light"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_margin="5dp"
                    android:layout_toEndOf="@+id/text_hashtag4"
                    android:elevation="10dp"
                    android:visibility="invisible"
                    />

            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>