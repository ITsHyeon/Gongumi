<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.PostTermFragment"
    android:background="@color/backgroundColor"
    >

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공구하기"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"

            />

        <Button
            android:id="@+id/btn_previous"
            android:layout_width="14dp"
            android:layout_height="26dp"
            android:background="@drawable/back_button"
            android:layout_marginTop="30dp"
            android:layout_marginStart="25dp"
            />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="14dp"
            android:layout_height="26dp"
            android:background="@drawable/btn_next"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="25dp"
            />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공구기간을\n선택해주세요"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#010101"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/text_post"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:layout_centerHorizontal="true"
            >

            <TextView
                android:id="@+id/text_startYear"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:textColor="@color/textColor"
                android:background="@drawable/custom_click_button_yellow"
                android:layout_marginBottom="25dp"
                android:layout_marginEnd="5dp"
                />

            <TextView
                android:id="@+id/text_startMonth"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:textColor="@color/textColor"
                android:background="@drawable/custom_click_button_yellow"
                android:layout_toEndOf="@+id/text_startYear"
                android:layout_marginEnd="5dp"
                />

            <TextView
                android:id="@+id/text_startDay"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:textColor="@color/textColor"
                android:background="@drawable/custom_click_button_yellow"
                android:layout_toEndOf="@+id/text_startMonth"
                android:layout_marginEnd="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="부터"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:textColor="@color/textColor"
                android:layout_toEndOf="@+id/text_startDay"
                />

            <Spinner
                android:id="@+id/spinner_EndYear"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:textColor="@color/textColor"
                android:background="@drawable/custom_click_button_yellow"
                android:layout_below="@+id/text_startYear"
                />

            <Spinner
                android:id="@+id/spinner_EndMonth"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:textColor="@color/textColor"
                android:background="@drawable/custom_click_button_yellow"
                android:layout_below="@+id/text_startYear"
                android:layout_toEndOf="@id/text_startYear"
                />

            <Spinner
                android:id="@+id/spinner_EndDay"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:textColor="@color/textColor"
                android:background="@drawable/custom_click_button_yellow"
                android:layout_below="@+id/text_startYear"
                android:layout_toEndOf="@id/text_startMonth"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="까지"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:textColor="@color/textColor"
                android:layout_below="@+id/text_startYear"
                android:layout_toEndOf="@+id/text_startDay"
                />

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>