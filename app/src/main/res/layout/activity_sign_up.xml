<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SignUpActivity"
    android:background="#fff"
    >

    <TextView
        android:id="@+id/text_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textColor="#010101"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        />

    <Button
        android:id="@+id/back_button"
        android:layout_width="16dp"
        android:layout_height="29dp"
        android:background="@drawable/back_button"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/profile_photo"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_sign_up"
        />

    <Button
        android:id="@+id/profile_button"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@drawable/profile_button"
        android:layout_marginTop="155dp"
        android:layout_marginStart="233dp"
        android:layout_marginLeft="233dp" />
    
    <EditText
        android:id="@+id/edit_id"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="ID"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/custom_input_button_gray"
        android:layout_below="@+id/profile_image"
        android:layout_marginTop="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        />

    <EditText
        android:id="@+id/edit_pw"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Password"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/custom_input_button_gray"
        android:layout_below="@+id/edit_id"
        android:layout_marginTop="23dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="NAME"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/custom_input_button_gray"
        android:layout_below="@+id/edit_pw"
        android:layout_marginTop="23dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        />

    <TextView
        android:id="@+id/text_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="우리동네 확인"
        android:textSize="17sp"
        android:textColor="#000"
        android:layout_below="@+id/edit_name"
        android:layout_marginTop="38dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="40dp"
        />

    <Button
        android:id="@+id/button_gps"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="GPS"
        android:background="@drawable/custom_gps_button_yellow"
        android:layout_below="@+id/edit_name"
        android:layout_toEndOf="@+id/text_gps"
        android:layout_toRightOf="@+id/text_gps"
        android:layout_marginTop="23dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        />

    <Button
        android:id="@+id/log_in"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Log in"
        android:background="@drawable/custom_click_button_yellow"
        android:layout_below="@+id/button_gps"
        android:layout_marginTop="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="40dp"
        />

</RelativeLayout>