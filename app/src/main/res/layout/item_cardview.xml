<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:style="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:layout_marginTop="8dp"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="190dp"
        android:layout_height="270dp"
        card_view:cardCornerRadius="33dp"
        card_view:cardElevation="5dp"
        android:layout_marginBottom="8dp"
        card_view:contentPaddingLeft="19dp"
        card_view:contentPaddingRight="19dp"
        card_view:contentPaddingTop="19dp"
        card_view:contentPaddingBottom="15dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="152dp"
                android:layout_height="140dp"
                />

            <TextView
                android:id="@+id/dateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/product"
                android:text="공구날짜"
                android:textSize="12dp"
                android:gravity="center"
                android:textColor="#ffba00"
                android:background="#EFffffff"
                android:padding="-5dp"
                android:fontFamily="@font/notosans_regular"/>

            <TextView
                android:id="@+id/product"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thumbnail"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="상품명"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/price"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:textSize="14sp"
                android:text="가격"
                android:textColor="#000"
                android:layout_below="@+id/product"
                />

            <TextView
                android:id="@+id/hashtag"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="해시태그"
                android:textColor="#000"
                android:layout_below="@+id/price"
                />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/custom_progressbar"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_below="@+id/hashtag"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="참여 인원"
                android:textColor="#000"
                android:layout_below="@+id/progressBar"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>